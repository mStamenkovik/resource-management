<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="row ">
                <h4>Select project</h4>
                <select class="form-control" ng-model="selectProject" ng-change="selectedProject()" ng-options="project.name for project in projects">
                </select>

            </div>
            <div class="row" style="margin-top: 40px">
                <h4>Select employees</h4>
                <select class="form-control" size="10" multiple ng-model="selectEmployee" ng-options="employee.name for employee in allEmployees" ></select>
            </div>
        </div>
        <div class="col-md-1">
            <div class="row ">
              <button type="submit" ng-click="assignEmployee()" class="btn btn-info"><span class="glyphicon glyphicon-arrow-right"></span>  Move</button>
            </div>
            <div class="row ">
                <button type="submit" ng-click="removeEmployee()" class="btn btn-info"><span class="glyphicon glyphicon-arrow-left"></span>  Move</button>
            </div>
        </div>
        <div class="col-md-6">

            <select class="form-control" size="10" ng-model="assignEmployees" ng-options="employee.name for employee in assignedEmployees" ></select>
            <button ng-click="save()" class="btn btn-success"><span class="glyphicon glyphicon-save"></span>  Save</button>
        </div>
    </div>
</div>
