<div class="container">
    <h3>Manage Project</h3>
    <h4>{{ project.name }}</h4>
    Date from: <label>{{ project.fromDate }}</label>
    Date to: <label>{{ project.toDate }}</label>
    <h4>Assign employee:</h4>
    <div class="row">
            <div class="form-group">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder=".col-xs-2">
                </div>
            </div>
           <div class="form-group">
                <div class="col-xs-3">
                    <select  class="form-control"  ng-model="projectRole" ng-options="role for role in roles"></select>
                </div>
           </div>
            <div class="form-group">
                <div class="col-xs-3">
                    <input type="text" class="form-control" placeholder=".col-xs-4">
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-3">
                    <button type="button" ng-click="addEmployee()" class="btn btn-info">Add Employee</button>
                </div>
            </div>
    </div>

</div>