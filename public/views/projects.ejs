<style>
    .green{
        color: green;
    }

    .red{
        color: #ff1824;
    }

</style>
<div class="container">
    <div class="row">
        <div>
            <ul class="nav nav-pills">
                <li role="presentation" ng-class="{ active: isTabSelected(1)}">
                    <a ng-click="selectTab(1)" href="">All Projects</a></li>
                <li role="presentation" ng-class="{ active: isTabSelected(2)}">
                    <a ng-click="selectTab(2)" href="">Not Completed</a></li>
                <li role="presentation" ng-class="{ active: isTabSelected(3)}">
                    <a ng-click="selectTab(3)" href="">Completed</a></li>
            </ul>
        </div>
    </div>
    <h3>Projects</h3>
    <div class="row">
        <div class="col-md-11">
            <table class="table table-striped">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date From</th>
                    <th>Date To</th>
                    <th>Completed</th>
                    <th>View</th>
                    <th ng-show="checkIfAdminLoggedIn()" >Edit</th>
                    <th ng-show="checkIfAdminLoggedIn()" >Delete</th>
                </tr>
                <tr ng-repeat="project in projects">
                    <td>
                        {{ project.name }}
                    </td>
                    <td>
                        {{ project.description }}
                    </td>
                    <td>
                        {{ project.from | limitTo: 10}}
                    </td>
                    <td>
                        {{ project.to | limitTo: 10 }}
                    </td>
                    <td>
                        <span ng-class="project.completed ? 'glyphicon glyphicon-ok green' : 'glyphicon glyphicon-remove red'"></span>
                    </td>
                    <td>
                        <button type="button" ng-click="viewProject(project.id)" class="btn btn-default"><span class="glyphicon glyphicon-list"></span></button>
                    </td>
                    <td ng-show="checkIfAdminLoggedIn()">
                        <button type="button" ng-click="editProject(project.id)" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span></button>
                    </td>
                    <td ng-show="checkIfAdminLoggedIn()">
                        <button type="button" ng-click="removeProject(project.id, $index)" class="btn btn-danger">x</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>