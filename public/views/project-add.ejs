<div class="container">
    <h3>Add Project:</h3>
    <form>
        <div class="form-group">
            <label>Project Name</label>
            <input type="text" class="form-control" placeholder="Project Name" ng-model="project.name">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea type="text"  class="form-control"  placeholder="Project Description" ng-model="project.description"></textarea>
        </div>
        <div class="form-group">
            <label>Date from:</label>
            <input type="text"  class="form-control"  ng-model="project.from">
        </div>
        <div class="form-group">
            <label>Date to:</label>
            <input type="text"  class="form-control" ng-model="project.to">
        </div>
        <button type="submit" ng-click="addProject()" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>  Add Project</button>
    </form>
</div>